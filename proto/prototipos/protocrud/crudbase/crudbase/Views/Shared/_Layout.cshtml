<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Scripts/notifyjs-master/notify-metro.css" rel="stylesheet" />

    @*Styles.Render("~/Content/css")*@
    @*Scripts.Render("~/bundles/modernizr")*@
    <script type="text/javascript" src="~/Assets/Scripts/modernizr/modernizr.js"></script>
    <script type="text/javascript" src="~/Assets/Scripts/jquery/jquery.js"></script>
    <script type="text/javascript" src="~/Assets/Scripts/bootstrap/bootstrap.js"></script>
    <script type="text/javascript" src="~/Scripts/notifyjs-master/notify.js"></script>
    <script type="text/javascript" src="~/Scripts/notifyjs-master/notify-metro.js"></script>
    <script type="text/javascript" src="~/Scripts/notifyjs-master/notify_execucao.js"></script>
    <script type="text/javascript" src="~/Scripts/Base/enums.js"></script>
    <script type="text/javascript" src="~/Scripts/Base/base.js"></script>
    <script type="text/javascript" src="~/Scripts/base/controles.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Nome do aplicativo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Início", "Index", "Home")</li>
                    <li>@Html.ActionLink("Sobre", "About", "Home")</li>
                    <li>@Html.ActionLink("Contato", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    @* Scripts.Render("~/bundles/jquery") *@
    @* Scripts.Render("~/bundles/jqueryval") *@
    <br />
    <br />
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Meu Aplicativo ASP.NET</p>
        </footer>
    </div>


    @* Scripts.Render("~/bundles/bootstrap") *@
    @RenderSection("scripts", required: false)
    @RenderSection("MyScripts", required: false)
</body>
</html>
